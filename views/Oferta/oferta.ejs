<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CRUD Node.js</title>
  <link rel="shortcut icon" href="img/icon.png" type="image/x-icon">
  <link rel="stylesheet" href="css/style.css">
  <link rel="stylesheet" href="css/nav.css">
  <script src="https://kit.fontawesome.com/20f8330ac2.js" crossorigin="anonymous"></script>

</head>
<body id="body" onload="open_close_menu()">
  <header>
      <div class="icon__menu">
          <i class="fas fa-bars" id="btn_open"></i>
      </div>
      <a href="./" class="logout-sesion">
        <div class="option">
            <i class="fa-solid fa-right-from-bracket" title="Salir"></i>
            <h4>Cerrar</h4> 
        </div>
    </a>
  </header>
  <div class="menu__side" id="menu_side"> 
      <div class="options__menu">
              <a href="/index" >
                  <div class="option">
                      <i class="fas fa-home" title="Home"></i>
                      <h4>Home</h4> 
                  </div>
              </a>
             
              <a href="./Client">
                  <div class="option">
                      <i class="far fa-id-badge" title="Cliente"></i>
                      <h4>Cliente</h4>
                  </div>
              </a>
              <a href="./oferta" class="selected">
                  <div class="option">
                      <i class="fa-solid fa-file-lines" title="Oferta"></i>
                      <h4>Oferta</h4>
                  </div>
              </a>
              <a href="./ListLogin">
                  <div class="option">
                      <i class="fa-solid fa-stethoscope" title="Usuarios"></i>
                      <h4>Usuarios</h4> 
                  </div>
              </a>
              
                
      </div>
  </div>
  <div class="center">
    <h4>Ofertas</h4>
  </div>
  <br>
  <div class="container-table" >
      <table>
        <thead>
          <th scope="col">Fecha</th>
          <th scope="col">Puesto</th>
          <th scope="col">Ubicacion</th>
          <th scope="col">Requisitos</th>
          <th scope="col">Creado</th>
          <th scope="col">Actualizado</th>
          <th scope="col">Opciones</th>
        </thead>
        <tbody>
          <% oferta.forEach(function(oferta) { %>
            <tr>
              <td>
                <%= oferta.fecha %>
              </td>
              <td>
                <%= oferta.puesto%>
              </td>   
              <td>
                <%= oferta.ubicacion%>
              </td>
              <td>
                <%= oferta.requisitos%>
              </td>
              <td>
                <%= oferta.created_at.toLocaleDateString() %>
                  <%= oferta.created_at.toLocaleTimeString() %>
              </td>
              <td>
                <%= oferta.updated_at.toLocaleDateString() %>
                  <%= oferta.updated_at.toLocaleTimeString() %>
              </td>            
              <td>
                <div class="btn-actions">
                  <div>
                    <form action="./editOferta" method="GET">
                      <input type="hidden" name="idOferta" value="<%= oferta.idOferta %>">
                      <button type="submit" class="edit-btn"><i class="fa-solid fa-pencil"></i></button>
                    </form>
                  </div>
                  <div>
                    <form action="./delete-oferta" method="POST">
                      <input type="hidden" name="idOferta" value="<%= oferta.idOferta %>">
                      <button type="submit" class="delete-btn"><i class="fa-solid fa-trash"></i></button>
                    </form>
                  </div> 
                </div>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>
      <div class="btn">
        <a href="./addOferta" class="boton">Agregar Oferta</a>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
      crossorigin="anonymous"></script>
    <script src="js/script.js"></script>
    <script src="js/menu.js"></script>
  </body>
  
